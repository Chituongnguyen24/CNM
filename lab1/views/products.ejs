<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quản lý Sản Phẩm</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-light">

<nav class="navbar navbar-dark bg-primary mb-4">
  <div class="container">
    <span class="navbar-brand mb-0 h1"><i class="fa-solid fa-store me-2"></i>Hệ thống Quản lý Sản Phẩm</span>
    <div class="d-flex align-items-center">
      <span class="text-white me-3">
        <i class="fa-solid fa-user me-1"></i>
        Xin chào, <strong><%= user.username %></strong>
      </span>
      <a href="/auth/logout" class="btn btn-outline-light btn-sm">
        <i class="fa-solid fa-sign-out-alt me-1"></i>Đăng xuất
      </a>
    </div>
  </div>
</nav>

<div class="container">
  <div class="row">
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm">
        <div class="card-header bg-white">
          <h5 class="mb-0 text-primary"><i class="fa-solid fa-plus-circle me-2"></i>Thêm Mới</h5>
        </div>
        <div class="card-body">
          <form action="/products/add" method="post">
            <div class="mb-3">
              <label class="form-label">Tên sản phẩm</label>
              <input name="name" class="form-control" required placeholder="Ví dụ: iPhone 15">
            </div>
            <div class="mb-3">
              <label class="form-label">Giá (VNĐ)</label>
              <input name="price" type="number" class="form-control" required placeholder="0">
            </div>
            <div class="mb-3">
              <label class="form-label">Số lượng</label>
              <input name="quantity" type="number" class="form-control" required placeholder="0">
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-save me-2"></i>Lưu Sản Phẩm
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-white">
          <h5 class="mb-0 text-primary"><i class="fa-solid fa-list me-2"></i>Danh Sách Sản Phẩm</h5>
        </div>
        <div class="card-body p-0">
          <% if(products.length === 0) { %>
            <div class="p-4 text-center text-muted">
              <i class="fa-solid fa-inbox fa-3x mb-3"></i>
              <p>Chưa có sản phẩm nào</p>
            </div>
          <% } else { %>
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead class="table-light">
                  <tr>
                    <th>ID</th>
                    <th>Tên Sản Phẩm</th>
                    <th>Giá</th>
                    <th>Số Lượng</th>
                    <th class="text-center">Thao Tác</th>
                  </tr>
                </thead>
                <tbody>
                  <% products.forEach(p => { %>
                    <tr>
                      <td><%= p.id %></td>
                      <td><strong><%= p.name %></strong></td>
                      <td><span class="badge bg-success"><%= p.price.toLocaleString() %> VNĐ</span></td>
                      <td><span class="badge bg-info"><%= p.quantity %></span></td>
                      <td class="text-center">
                        <a href="/products/edit/<%= p.id %>" class="btn btn-sm btn-warning me-1">
                          <i class="fa-solid fa-edit"></i>
                        </a>
                        <form action="/products/delete/<%= p.id %>" method="post" style="display: inline;">
                          <button type="submit" class="btn btn-sm btn-danger" 
                                  onclick="return confirm('Bạn có chắc muốn xóa?')">
                            <i class="fa-solid fa-trash"></i>
                          </button>
                        </form>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>