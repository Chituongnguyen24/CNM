<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quản lý Kho Hàng</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-light">

<nav class="navbar navbar-dark bg-primary mb-4">
  <div class="container">
    <span class="navbar-brand mb-0 h1"><i class="fa-solid fa-store me-2"></i>Hệ thống Quản lý Sản Phẩm</span>
  </div>
</nav>

<div class="container">
  <div class="row">
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm">
        <div class="card-header bg-white">
          <h5 class="mb-0 text-primary"><i class="fa-solid fa-plus-circle me-2"></i>Thêm Mới</h5>
        </div>
        <div class="card-body">
          <form action="/add" method="post">
            <div class="mb-3">
              <label class="form-label">Tên sản phẩm</label>
              <input name="name" class="form-control" required placeholder="Ví dụ: iPhone 15">
            </div>
            <div class="mb-3">
              <label class="form-label">Giá (VNĐ)</label>
              <input name="price" type="number" class="form-control" required placeholder="0">
            </div>
            <div class="mb-3">
              <label class="form-label">Số lượng</label>
              <input name="quantity" type="number" class="form-control" required placeholder="0">
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-save me-2"></i>Lưu Sản Phẩm
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
          <h5 class="mb-0 text-dark"><i class="fa-solid fa-list me-2"></i>Danh Sách</h5>
          <span class="badge bg-secondary"><%= products.length %> sản phẩm</span>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover table-striped mb-0 text-center align-middle">
              <thead class="table-dark">
              <tr>
                <th>ID</th>
                <th class="text-start">Tên Sản Phẩm</th>
                <th>Giá</th>
                <th>Kho</th>
                <th>Hành động</th>
              </tr>
              </thead>
              <tbody>
              <% if (products.length === 0) { %>
                <tr><td colspan="5" class="text-muted py-4">Chưa có dữ liệu.</td></tr>
              <% } else { %>
                <% products.forEach(p => { %>
                  <tr>
                    <td><%= p.id %></td>
                    <td class="text-start fw-bold text-primary"><%= p.name %></td>
                    <td><%= p.price.toLocaleString('vi-VN') %> ₫</td>
                    <td>
                                                <span class="badge <%= p.quantity > 0 ? 'bg-success' : 'bg-danger' %>">
                                                    <%= p.quantity %>
                                                </span>
                    </td>
                    <td>
                      <a href="/edit/<%= p.id %>" class="btn btn-sm btn-warning text-white me-1" title="Sửa">
                        <i class="fa-solid fa-pen"></i>
                      </a>
                      <form action="/delete/<%= p.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Bạn có chắc muốn xóa không?');">
                        <button type="submit" class="btn btn-sm btn-danger" title="Xóa">
                          <i class="fa-solid fa-trash"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>